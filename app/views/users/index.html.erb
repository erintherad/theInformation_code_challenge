<div class="row justify-content-center">
  <div class="col-md-12">
    <h1>All Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Marketing</th>
          <th>Articles</th>
          <th>Digest</th>
          <th>Token ID</th>
          <th>Token Nonce</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.marketing %></td>
            <td><%= user.articles %></td>
            <td><%= user.digest %></td>
          <% @tokens.each do |token| %>
            <td><%= token.id %></td>
            <td><%= token.nonce %></td>
            <td><%= link_to "Show", email_preferences_path(user, email: user.email, token: token.nonce) %></td>
          <% end %>
            <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
