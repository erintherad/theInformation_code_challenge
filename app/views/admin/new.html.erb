<div class="row justify-content-center">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h2>Create a new user</h2>
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="form-check">
        <h5>Email Preferences</h6>
        <label class="form-check-label">
          <%= f.check_box :marketing %>
          Marketing
        </label>
        <label class="form-check-label">
          <%= f.check_box :articles %>
          Articles
        </label>
        <label class="form-check-label">
          <%= f.check_box :digest %>
          Digest
        </label>
      </div>
      <input type="hidden" name="nonce" value="<%= @nonce %>">
      <div class="actions">
        <%= f.submit "Create", class: "btn btn-outline-primary btn-sm" %>
      </div>
    <% end %>
    <br>
    <%= link_to 'Go back', root_path, class: "btn btn-outline-primary btn-sm" %>
  </div>
  <div class="col-md-4"></div>
</div>
